<div id="games-listing">
  <h1>Games</h1>
</div>

<% @games.each do |game| %>
  <div class="entry">
    <strong><%=link_to game.name, game %></strong>
    <% if user_signed_in? and current_user.is_subscribed?(game) %>
        <%= link_to unsubscribe_to_game_path(game), method: :delete do %>
          <div class="btn btn-danger pull-right">
            <i class='icon-minus icon-white'></i>Remove
          </div>
        <% end %>
    <% else %>
        <%= link_to subscribe_to_game_path(game), method: :post do %>
          <div class="btn btn-primary pull-right">
            <i class='icon-plus icon-white'></i>Add
          </div>
        <% end %>
    <% end %>
    <% if can? :manage, game %>
      <div class="list-controls">
          <%= link_to 'Destroy', game, method: :delete, :class => "btn btn-danger pull-right" %>
          <%= link_to 'Edit',    edit_game_path(game),  :class => "btn btn-primary pull-right" %>
      </div>
    <% end %>

  </div>
  <br>
<% end %>

<% if can? :create, Game %>
   <%= link_to 'New Game', new_game_path, :class => "btn btn-primary pull-right" %>
<% end %>

<% content_for :side_bar do %>
  <% if user_signed_in? %>
    <strong>Your Games</strong>
    <hr>
    <% current_user.games.each do |game| %>
      <%= game.name %><br>
    <% end %>
  <% end %>
<% end %>