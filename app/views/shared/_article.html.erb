<div class="entry row">

  <div class="entry-name">
    <div class="article-name" class="">
      <h3><%= article.name %></h3>
    </div>
  </div>
  <div class="entry-content">
    <div class="article-image small-4 columns">
      <% if article.image.url != "/images/original/missing.png" %>
        <%= image_tag article.image.url(:medium) %>
      <% else %>
        <%= image_tag article.topic.image.url(:medium) %>
      <% end %>
    </div>
    <div class="article-content small-8 columns">
      <%= article.content %>
    </div>
  </div>
  <div class="entry-controls">
    <% if can? :manage, article %>
      <%= link_to 'Edit', edit_topic_article_path(article.topic,article) %>
    <% end %>
  </div>
</div>