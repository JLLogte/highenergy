
<div class="heading gradient-heading">
  <h1>News Feed</h1>
</div>

<% @articles.each do |article| %>
  <div class="entry">
    <div class="entry-name">
      <%= article.name %>
    </div>
    <div class="entry-content">
      <%= article.content %>
    </div>
    <div class="entry-controls">
      <% if can? :manage, article %>
        <%= link_to 'Destroy', article, method: :delete, :class => "btn btn-danger" %>
        <%= link_to 'Edit',    edit_article_path(article),  :class => "btn btn-primary" %>
      <% end %>
    </div>
  </div>
<% end %>
<br>



<% content_for :side_bar do %>
  <div class="heading gradient-heading">
    <% if user_signed_in? %>
      <h3>Your Articles</h3>
    <% end %>
  </div>
  <div class="side-content">
  </div>
<% end %>